{
  "name": "runweather",
  "version": "1.0.0",
  "description": "Running weather impact calculator",
  "scripts": {
    "start": "serve .",
    "lint": "eslint . --ext .js",
    "test": "npm run test:unit",
    "test:unit": "vitest run",
    "test:e2e": "npm run test:e2e:smoke && npm run test:e2e:visual",
    "test:e2e:smoke": "playwright test tests/e2e/smoke.spec.js",
    "test:e2e:visual": "playwright test tests/e2e/visual.spec.js",
    "test:ci": "npm run lint && npm run test:unit && npm run test:e2e:smoke && npm run test:e2e:visual"
  },
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.51.1",
    "eslint": "^8.57.1",
    "serve": "^14.2.4",
    "vitest": "^2.1.8"
  }
}
